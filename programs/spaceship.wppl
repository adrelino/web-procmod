
// Stochastic ordering
var delayed = function(fn)
{
	return function()
	{
		var args = arguments;
		if (globalStore.__futures === undefined)
			globalStore.__futures = [];
		var future = function() { return apply(fn, args); }
		globalStore.__futures = globalStore.__futures.concat([future]);
		return future;
	}
}

