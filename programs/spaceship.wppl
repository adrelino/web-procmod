var Y = function (F) {
 return (function (x) {
  return F(function () {
  	var args = arguments;
  	return apply((x(x)), args);});
  })
        (function (x) {
  return F(function () {
  	var args = arguments;
  	return apply((x(x)), args);});
  }) ;
} ;


